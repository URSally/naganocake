<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>ながのケーキ</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
              <li>
                <%= link_to public_customer_path, class: "nav-link text-dark" do %>
                マイページ
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: "nav-link text-dark" do %>
                商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to cart_items_path, class: "nav-link text-dark" do %>
                カート
                <% end %>
              </li>
              <li>
                <%= link_to destroy_customer_session_path, class: "nav-link text-dark", method: :delete do %>
                ログアウト
                <% end %>
              </li>
              <% elsif admin_signed_in? %>
              <li>
                <%= link_to admin_items_path, class: "nav-link text-dark" do %>
                商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to admin_customers_path, class: "nav-link text-dark" do %>
                会員一覧
                <% end %>
              </li>
              <li>
                <%= link_to admin_root_path, class: "nav-link text-dark" do %>
                注文履歴一覧
                <% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, class: "nav-link text-dark", method: :delete do %>
                ログアウト
                <% end %>
              </li>
              <% else %>
              <li>
                <%= link_to about_path, class: "nav-link text-dark" do %>
                About
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: "nav-link text-dark" do %>
                商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_registration_path, class: "nav-link text-dark" do %>
                新規登録
                <% end %>
              </li>
               <li>
                <%= link_to new_customer_session_path, class: "nav-link text-dark" do %>
                ログイン
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="fixed-bottom shadow-sm text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
