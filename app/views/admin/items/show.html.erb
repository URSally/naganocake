<main>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p>商品詳細</p>
      <div>画像</div>
    </div>

    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre_id %></td>
          </tr>
          <tr>
            <td>税込価格</br>(税抜価格)</td>
            <td><%= @item.price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
          </tr>
          　<td class="text-center">
          　 <%= link_to edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" do %>
          　 編集する
          　 <% end  %>
          　</td>
        </tbody>
      </table>
    </div>
  </div>
</div>
</main>
