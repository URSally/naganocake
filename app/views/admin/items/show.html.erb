<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-5 bg-secondary text-center">商品詳細</div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <div class="col-4">
        <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x200" %>
        <% else %>
        <%= image_tag 'no_image', size: "300x200" %>
        <% end %>
      </div>
      <div class="col-2">
        <div>商品名</div>
        <div class="mt-4">商品説明</div>
        <div class="mt-4">税込価格</br>(税抜価格)</div>
      </div>
      <div class="col-4">
        <div><%= @item.name %></div>
        <div class="mt-4"><%= @item.introduction %></div>
        <div class="mt-4"><%= @item.price %> (<%= @item.add_tax_price.to_s(:delimited) %>) 円</div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-2"></div>
      <div class="col-7 text-center">
        <%= link_to edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" do %>
        編集する
        <% end %>
      </div>
    </div>
  </div>
</main>
