<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-5 bg-secondary text-center">商品一覧</div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <table class="table">
        <thead>
         <tr class="table-active">
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
         </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody class="table-boederless">
          <tr>
            <th scope="row"><%= item.id %></th>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
          </tr>
        </tbody>
        <% end %>
        <%= paginate @items %>
    </div>
  </div>
</main>