<main>
  <div class="container">
    <div class="row">
      <div class="col-2"></div>
      <div class="col">
        <div class="mt-5 mb-5 bg-secondary text-center">商品新規登録</div>
      </div>
      <div class="col-8"></div>
    </div>

      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
      <div class="row">
        <div class="col-3"></div>
        <label class="col-1">商品画像</label>
        <div class="col-4">
      　<%= f.file_field :image, accept: "image/*" %>
      　</div>
      </div>
      <div class="row">
        <div class="col-3"></div>
        <label class="col-1 mt-4">商品名</label>
        <div class="col-4">
      　<%= f.text_field :name, style: "width:100%;" %>
      　</div>
      </div>
      <div class="row">
        <div class="col-3"></div>
        <label class="col-1 mt-4">商品説明</label>
        <div class="col-4">
      　<%= f.text_area :introduction, style: "width:100%; height:150px;" %>
      　</div>
      </div>
      <div class="row">
        <div class="col-3"></div>
        <label class="col-1 mt-4">税抜価格</label>
        <div class="col-4 mt-4">
      　<%= f.text_field :price, style: "width:90%;"  %>円
      　</div>
      </div>
      <div class="row mb-5" style="height:70px;">
        <div class="col-10 text-center">
          <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
        </div>
      </div>
      <% end %>
  	</div>
  </div>
</div>
</main>