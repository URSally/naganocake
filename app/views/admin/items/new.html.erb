<main>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div>商品新規登録</div>
      <%= form_with model: @newitem do |f| %>
      <div class="form-froup">
        <label>商品画像</label>
      　<%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-froup">
        <label>商品名</label>
      　<%= f.text_field :name %>
      </div>
      <div class="form-froup">
        <label>商品説明</label>
      　<%= f.text_area :introduction %>
      </div>
      <div class="form-froup">
        <label>ジャンル</label>
      　<%= f.select :genre, ['ケーキ', 'プリン', '焼き菓子', 'キャンディ'], {include_blank: '--選択してください--'} %>
      </div>
      <div class="form-froup">
        <label>税抜価格</label>
      　<%= f.text_field :price %>円
      </div>
      <div class="form-froup">
        <label>販売ステータス</label>
      </div>


      <% end %>
  	</div>
  </div>
</div>
</main>