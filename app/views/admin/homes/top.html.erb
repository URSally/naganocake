<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-5 bg-secondary text-center">注文履歴一覧</div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <table class="table">
        <thead>
         <tr class="table-active">
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
         </tr>
        </thead>
        <% @orders.each do |orders| %>
        <tbody class="table">
          <tr>
            <th scope="row">
              <%= link_to orders.created_at, admin_order_path(orders.id) %>
            </th>
            <td><%= orders.customer.last_name %><%= orders.customer.first_name %></td>
            <td><%= orders.order_details.sum(:amount) %></td>
          </tr>
        </tbody>
        <% end %>
    </div>
  </div>
</main>