<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-5 bg-secondary text-center">会員一覧</div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <table class="table">
        <thead>
         <tr class="table-active">
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
         </tr>
        </thead>
        <% @customer.each do |customer| %>
        <tbody class="table-boederless">
          <tr>
            <th scope="row"><%= customer.id %></th>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %>
              <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted ? '退会' : '有効' %></td>
          </tr>
        </tbody>
        <% end %>
        <%= paginate @customer %>
    </div>
  </div>
</main>