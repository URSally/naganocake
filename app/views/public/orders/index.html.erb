<main>
  <div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2">
            <div class="mt-5 mb-4 bg-secondary text-center">注文履歴一覧</div>
        </div>
        <div class="col-8"></div>
    </div>


      <div class="row mb-4">
        <div class="col-12 text-left">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>注文日</th>
                  <th>配送先</th>
                  <th>注文商品</th>
                  <th>支払金額</th>
                  <th>注文詳細</th>
                </tr>
              </thead>
              <% @orders.each do |orders| %>
              <tbody>
                <tr>
                  <td class="pt-3">
                    <%= orders.created_at %>
                  </td>
                  <td class="pt-4">
                    〒<%= current_customer.postal_code %></br>
                    <%= current_customer.address %></br>
                    <%= current_customer.last_name %><%= current_customer.first_name %>
                  </td>
                  <td class="pt-4">
                    <% orders.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %></br>
                    <% end %>
                  </td>
                  <td><%= orders.billing_amount + orders.postage %></td>
                  <td>
                    <%= link_to order_path(orders.id), class: "btn btn-sm btn-primary" do %>
                    表示する
                    <% end %>
                  </td>
                </tr>
              </tbody>
              <% end %>
            </table>
        </div>
      </div>
  </div>
</main>