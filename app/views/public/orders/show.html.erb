<main>
  <div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2">
            <div class="mt-5 mb-4 bg-secondary text-center">注文履歴詳細</div>
        </div>
        <div class="col-8"></div>
    </div>
    <div class="row mb-4">
      <div class="col-6 pb-4">
        <h4>注文情報</h4>
        <table class="table table-bordered">
          <tbody>
            <tr>
             <td>注文日</td>
             <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
             <td>配送先</td>
             <td>
                〒<%= current_customer.postal_code %></br>
                <%= current_customer.address %></br>
                <%= current_customer.last_name %><%= current_customer.first_name %>
              </td>
            </tr>
            <tr>
             <td>支払方法</td>
             <td><%= @order.payment_type_i18n %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-3 ml-3 pb-4">
        <h4>請求情報</h4>
        <table class="table table-bordered">
          <tbody>
            <tr>
             <td>商品合計</td>
             <td><%= @order.billing_amount + @order.postage %></td>
            </tr>
            <tr>
             <td>配送料</td>
             <td><%= @order.postage %></td>
            </tr>
            <tr>
             <td>ご請求金額</td>
             <td><%= @order.billing_amount %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-8 text-left">
        <h4>注文内容</h4>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <% @order.order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td class="pt-3"><%= order_detail.item.name %></br></td>
              <td class="pt-4"><%= order_detail.tax_price %></td>
              <td class="pt-4"><%= order_detail.amount %></td>
              <td><%= order_detail.tax_price + order_detail.amount %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>