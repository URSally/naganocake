<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-4 mb-3 bg-secondary text-center">
          <h5>ログイン</h5>
        </div>
      </div>
      <div class="col-7"></div>
    </div>

    <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-3">
        <div class="mt-3 mb-5 bg-secondary text-center">会員の方はこちらからログイン</div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-2">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:100%;" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2"></div>
      <div class="col-2">
        <%= f.label :パスワード %>
      </div>
      <div class="col-5">
        <%= f.password_field :password, autocomplete: "current-password", style: "width:100%;" %>
      </div>
    </div>
    <div class="row mt-5 mb-1">
      <div class="col-10 text-center">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary", style: "width:25%;" %>
      </div>
    </div>
    <% end %>

   <div class="row">
      <div class="col-1"></div>
      <div class="col-3">
        <div class="mt-5 mb-1 bg-secondary text-center">会員登録がお済みでない方</div>
      </div>
    </div>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-4 text-left"><%= render "public/shared/links" %>から新規登録を行ってください。</div>
    </div>
  </div>
</main>

