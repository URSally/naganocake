<main>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-1">
            <div class="mt-5 mb-5 bg-secondary text-center">マイページ</div>
        </div>
        <div class="col-8"></div>
    </div>
    <div class="row">
        <div class="col-2">
            <h5 class="text-right">登録情報</h5>
        </div>

        <div class="col-4">
            <div>
                <%= link_to edit_public_customer_path, class: "btn btn-sm btn-success" do %>
                編集する
                <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-6 text-left">
            <table class="table table-bordered mt-3">
                <tbody>
                    <tr>
                        <td>氏名</td>
                        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                    </tr>
                    <tr>
                        <td>カナ</td>
                        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                    </tr>
                    <tr>
                        <td>郵便番号</td>
                        <td><%= @customer.postal_code %></td>
                    </tr>
                    <tr>
                        <td>住所</td>
                        <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                        <td>電話番号</td>
                        <td><%= @customer.telephone_number %></td>
                    </tr>
                    <tr>
                        <td>メールアドレス</td>
                        <td><%= @customer.email %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
     <div class="row mt-3">
        <div class="col-2">
            <h5 class="text-right">配送先　</h5>
        </div>

        <div class="col-4">
            <div>
                <%= link_to about_path, class: "btn btn-sm btn-primary" do %>
                一覧を見る
                <% end %>
            </div>
        </div>
    </div>
    <div class="row mt-3 mb-5">
        <div class="col-2">
            <h5 class="text-right">注文履歴</h5>
        </div>

        <div class="col-4">
            <div>
                <%= link_to about_path, class: "btn btn-sm btn-primary" do %>
                一覧を見る
                <% end %>
            </div>
        </div>
    </div>
</main>