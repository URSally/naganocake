      <%= form_with model: @customer, url: public_customer_path do |f| %>
        <table>
          <tr class="field">
            <th scope="row">名前</th>
            <td>
              (姓)  <%= f.text_field :last_name %>
            </td>
            <td>
              (名)  <%= f.text_field :first_name %>
            </td>
          </tr>

          <tr class="field">
            <th scope="row">フリガナ</th>
            <td>
              (セイ)  <%= f.text_field :last_name_kana %>
            </td>
            <td>
              (メイ)  <%= f.text_field :first_name_kana %>
            </td>
          </tr>

          <tr class="field">
            <th scope="row">メールアドレス</th>
            <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>

          <tr class="field">
            <th scope="row">郵便番号(ハイフンなし)</th>
            <td>
              <%= f.text_field :postal_code %>
            </td>
          </tr>

          <tr class="field">
            <th scope="row">住所</th>
            <td>
              <%= f.text_field :address %>
            </td>
          </tr>

          <tr class="field">
            <th scope="row">電話番号(ハイフンなし)</th>
            <td>
              <%= f.text_field :telephone_number %>
            </td>
          </tr>
        </table>
      <% end %>