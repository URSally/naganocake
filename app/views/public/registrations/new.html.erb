<main>
<div class="container">
  <div class="row">
    <div class="mx-auto col-9">
      <h4>新規会員登録</h4>
    </div>

    <div class="text-left col-10">
      <table class="table">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <tr class="field">
          <th scope="row">名前</th>
          <td>
            (姓)  <%= f.text_field :last_name %>
          </td>
          <td>
            (名)  <%= f.text_field :first_name %>
          </td>
        </tr>

        <tr class="field">
          <th scope="row">フリガナ</th>
          <td>
            (セイ)  <%= f.text_field :last_name_kana %>
          </td>
          <td>
            (メイ)  <%= f.text_field :first_name_kana %>
          </td>
        </tr>

        <tr class="field">
          <th scope="row">メールアドレス</th>
          <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </tr>

        <tr class="field">
          <th scope="row">郵便番号(ハイフンなし)</th>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>

        <tr class="field">
          <th scope="row">住所</th>
          <td>
            <%= f.text_field :address %>
          </td>
        </tr>

        <tr class="field">
          <th scope="row">電話番号(ハイフンなし)</th>
          <td>
            <%= f.text_field :telephone_number %>
          </td>
        </tr>

        <tr class="field">
          <th scope="row">パスワード(6文字以上)</th>
          <% if @minimum_password_length %>
          <td><%= f.password_field :encrypted_password, autocomplete: "new-password" %></td>
          <% end %>
        </tr>

        <tr class="field">
          <th scope="row">パスワード(確認用)</th>
          <td><%= f.password_field :encrypted_password_confirmation, autocomplete: "new-password" %></td>
        </tr>

        <tr class="actions">
          <th scope="row"></th>
          <td>
          <%= f.submit "新規登録" %>
          </td>
        </tr>
      <% end %>
      </table>
    </div>

    <div class="mx-auto col-9">
       <h4>既に登録済みの方</h4>
      <div>
      <%= render "public/shared/links" %>からログインしてください。
      </div>
    </div>
  </div>
</div>
</main>
