<main>
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-5 bg-secondary text-center">新規会員登録</div>
      </div>
      <div class="col-7"></div>
    </div>

    <div class="row">
      <div class="col-3">
        <div class="mt-4">氏名</div>
        <div class="mt-4">フリガナ</div>
        <div class="mt-4">郵便番号</div>
        <div class="mt-4">住所</div>
        <div class="mt-4">電話番号</div>
        <div class="mt-4">メールアドレス</div>
        <div class="mt-4">パスワード(6文字以上)</div>
        <div class="mt-4">パスワード(確認用)</div>
      </div>
      <div class="col-8">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div><%= @customer.id %></div>
        <div class="mt-3"><%= f.text_field :last_name %>　<%= f.text_field :first_name %></div>
        <div class="mt-3"><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></div>
        <div class="mt-4"><%= f.text_field :postal_code %></div>
        <div class="mt-3"> <%= f.text_field :address, style: "width:80%;" %></div>
        <div class="mt-3"><%= f.text_field :telephone_number %></div>
        <div class="mt-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        <div class="mt-3">
          <% if @minimum_password_length %>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <% end %>
        </div>
        <div class="mt-4"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        <div class="mt-2"><%= f.submit "新規登録", class: "btn btn-sm btn-success", style: "width:25%;" %></div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <div class="mt-5 mb-1 bg-secondary text-center">既に登録済みの方</div>
      </div>
    </div>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-4 text-left"><%= render "public/shared/links" %>からログインしてください。</div>
    </div>
  </div>
</main>
